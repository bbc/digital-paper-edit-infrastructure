{
    "Description": "AWS CloudFormation Sample Template: This template demonstrates the creation of a DynamoDB table.",
    "Parameters": {
        "ComponentName": {
            "Description": "Component name",
            "Type": "String"
        },
        "Environment": {
            "AllowedPattern": "^(int|test|live)$",
            "Default": ".",
            "Description": "Environment name to check against int, test, or live",
            "Type": "String"
        },
        "ReceiveMessageWaitTimeSeconds": {
            "Default": 20,
            "Type": "Integer"
        },
        "SttBridgeAwsIspyTopic": {
            "Description": "SttBridgeAwsIspyTopic",
            "Type": "String"
        },
        "SttGatewayIspyTopic": {
            "Description": "SttGatewayIspyTopic",
            "Type": "String"
        },
        "SttIspyConformerIspyTopic": {
            "Description": "SttIspyConformerIspyTopic",
            "Type": "String"
        },
        "SttNormaliserAwsIspyTopic": {
            "Description": "SttNormaliserAwsIspyTopic",
            "Type": "String"
        },
        "SttOutputNotification": {
            "Description": "SttOutputNotification",
            "Type": "String"
        },
        "VisibilityTimeout": {
            "Default": 30,
            "Type": "Integer"
        }
    },
    "Resources": {
        "AllowSNS2SQSPolicy": {
            "Properties": {
                "PolicyDocument": {
                    "Id": "PublicationPolicy",
                    "Statement": [
                        {
                            "Action": [
                                "sqs:GetQueueUrl",
                                "sqs:SendMessage",
                                "sqs:GetQueueAttributes"
                            ],
                            "Condition": {
                                "ForAnyValue:ArnEquals": {
                                    "aws:SourceArn": [
                                        {
                                            "Ref": "SttBridgeAwsIspyTopic"
                                        },
                                        {
                                            "Ref": "SttGatewayIspyTopic"
                                        },
                                        {
                                            "Ref": "SttIspyConformerIspyTopic"
                                        },
                                        {
                                            "Ref": "SttNormaliserAwsIspyTopic"
                                        },
                                        {
                                            "Ref": "SttOutputNotification"
                                        }
                                    ]
                                }
                            },
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": "*"
                            },
                            "Resource": {
                                "Fn::GetAtt": [
                                    "SQSQueue",
                                    "Arn"
                                ]
                            },
                            "Sid": "PSTT-statement"
                        }
                    ],
                    "Version": "2008-10-17"
                },
                "Queues": [
                    {
                        "Ref": "SQSQueue"
                    }
                ]
            },
            "Type": "AWS::SQS::QueuePolicy"
        },
        "SQSQueue": {
            "Properties": {
                "QueueName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Environment"
                            },
                            {
                                "Ref": "ComponentName"
                            },
                            "queue"
                        ]
                    ]
                },
                "ReceiveMessageWaitTimeSeconds": {
                    "Ref": "ReceiveMessageWaitTimeSeconds"
                },
                "VisibilityTimeout": {
                    "Ref": "VisibilityTimeout"
                }
            },
            "Type": "AWS::SQS::Queue"
        }
    }
}
