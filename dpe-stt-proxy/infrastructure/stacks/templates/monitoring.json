{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "Environment": {
            "Type": "String"
        },
        "LogGroupName": {
            "Type": "String"
        }
    },
    "Resources": {
        "LogGroup": {
            "Properties": {
                "LogGroupName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Environment"
                            },
                            {
                                "Ref": "LogGroupName"
                            }
                        ]
                    ]
                },
                "RetentionInDays": 14
            },
            "Type": "AWS::Logs::LogGroup"
        }
    }
}
